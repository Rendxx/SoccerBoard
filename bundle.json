{
  "path": {
    "bower": {
      "src": "bower_components",
      "dest": "public/wwwroot/lib"
    },
    "js": {
      "src": "script",
      "dest": "public/wwwroot/script"
    },
    "less": {
      "src": "style",
      "dest": "public/wwwroot/style"
    }
  },

  "bundle": {
    "bower": {
      "#dest#/jquery/": "#src#/jquery/dist/jquery*.{js,map}",
      "#dest#/react/": "#src#/react/react*.{js,map}",
      "#dest#/babel-standalone/": "#src#/babel-standalone/babel*.{js,map}"
    },
    "less": {
      "#dest#/main": [ "#src#/main.less" ]
    },
    "js": {
      "#dest#/main": [ "#src#/main.js" ]
    }
  }
}
